# Production Environment Variables for Performance
# Copy these to your .env file in production

# App Configuration
APP_ENV=production
APP_DEBUG=false

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis Configuration (for better performance)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Database Configuration (optimize for production)
DB_CONNECTION=mysql
# Add these to your database connection
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Additional Performance Settings
OCTANE_SERVER=swoole
OCTANE_HTTPS=false

# File Cache for better performance
FILESYSTEM_DISK=local

# Log Configuration
LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Session Configuration
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcast Configuration (if using real-time features)
BROADCAST_DRIVER=redis

# Mail Configuration (async for better performance)
MAIL_MAILER=smtp
QUEUE_MAIL=true
